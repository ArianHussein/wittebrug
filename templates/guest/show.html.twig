{% extends 'base.html.twig' %}

{% block title %}Employees!{% endblock %}

{% block body %}
 <table>
     <tr>
         <th>id</th>
         <th>firstname</th>
         <th>lastname</th>
         <th>salary</th>
         <th>department</th>
     </tr>
     {% for employee in employees %}
     <tr>
         <td>{{ employee.id }}</td>
         <td>{{ employee.firstname }}</td>
         <td>{{ employee.lastname }}</td>
         <td>{{ employee.salary }}</td>
         <td>{{ employee.department.name }}</td>
     </tr>
     {% endfor %}

 </table>
{% endblock %}
